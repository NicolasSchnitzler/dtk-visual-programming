/* **************************************************************
 * dtkTagCloud
 * ************************************************************** */

dtkWidgetsTagCloudScope QLineEdit {
    border: 1px solid #8c8c8c;
    border-radius: 10px;
    padding-left: 10px;
    font-size: 10px;
}

dtkWidgetsTagCloudScope QFrame#dtkWidgetsTagCloudScopeHeader:active {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #dadada, stop: 1.0 #bcbcbc);
    border-bottom: 1px solid #6c6c6c;
}

dtkWidgetsTagCloudScope QFrame#dtkWidgetsTagCloudScopeHeader:!active {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #f5f5f5, stop: 1.0 #dadada);
    border-bottom: 1px solid #6c6c6c;
}

dtkWidgetsTagCloudScope QToolButton {
    background: none;
    background-image: url(:dtkVisualProgramming/pixmaps/dtkTagScope-sweep.png);
    border: none;
}

dtkWidgetsTagCloudScope QToolButton:pressed {
    background-image: url(:dtkVisualProgramming/pixmaps/dtkTagScope-sweep-pressed.png);
}

dtkWidgetsTagCloudScope QFrame#dtkWidgetsTagCloudScopeWell {
    background: white url(:dtkVisualProgramming/pixmaps/dtkTagScopeWell.png);
    background-repeat: repeat-xy;
    border-bottom: 1px solid #919191;
}

dtkWidgetsTagCloud:active {
    background-color: #e7ebf0;
}

dtkWidgetsTagCloud:!active {
    background-color: #ededed;
}

dtkItemList {
    background: white url(:dtkVisualProgramming/pixmaps/dtkTagScopeWell.png);
    background-repeat: repeat-xy;
}

/* **************************************************************
 * QHeaderView
 * ************************************************************** */

QHeaderView::section {
    border: none;
    padding: 5px;
    border-bottom: 1px solid #818181;
}

QHeaderView::section:!last:!only-one {
    border-right: 1px solid #818181;
}

QHeaderView::section:active {
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #dadada, stop: 1.0 #bcbcbc);
}

QHeaderView::section:!active {
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #f5f5f5, stop: 1.0 #dadada);
}

